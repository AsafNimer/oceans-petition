<section class="login-section">
    <p class="sign-in-title">Please sign in</p>
    {{#if error}}
        <p class="error-msg">Password or Email not valid, try again</p>
    {{/if}}
    <form action="" method="post" name="login-form" id="login-form">
        <input
            class="login-input"
            type="email"
            id="email-input"
            name="email"
            placeholder="email"
            required
        /><br /><br />
        <input
            class="login-input"
            type="password"
            id="password-input"
            name="password"
            placeholder="password"
            required
        /><br /><br />
        <button
            id="login-button"
            name="login-button"
            class="register"
        >Submit</button>
    </form>

    <a href="/register">Back to register</a>
</section>