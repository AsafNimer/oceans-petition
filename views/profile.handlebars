<section class="profile-section">
    {{#if error}}
        <p class="error-msg">Something went wrong!</p>
    {{/if}}
    <p class="profile-title">Tell us a bit more about yourself.</p>
    <form
        action="/profile"
        method="post"
        name="register-form"
        id="register-form"
    >
        <input
            class="profile-input"
            type="number"
            id="input-age"
            name="age"
            placeholder="Age"
        />
        <input
            class="profile-input"
            type="text"
            id="city"
            name="city"
            placeholder="City"
        />
        <input
            class="profile-input"
            type="url"
            id="user-website-input"
            name="url"
            placeholder="Website"
        />
        <button id="profile-button">Continue</button>
    </form>
    <p class="skip"><a href="/petition">Skip</a></p>
</section>