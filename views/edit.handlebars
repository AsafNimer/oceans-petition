<section class="edit-section">
    
    <p class="edit-title">Edit your profile</p>
    <form action="/edit" method="post" name="edit-form" id="edit-form">
        {{#userResults}}
        <div class="input-div">
        <label for="first" id="firstname_label">First Name</label>
        <input
            class="firtsname-input"
            type="text"
            id="input_firstname"
            name="first"
            value="{{first}}"
        />
        </div>
        <div class="input-div">
        <label for="last" id="lastname_label">Last Name</label>
        <input
            class="lastname-input"
            type="text"
            id="input_lastName"
            name="last"
            value="{{last}}"
        />
        </div>
        <div class="input-div">
        <label for="email" id="email_label">Email</label>
        <input
            class='email-input"'
            type="email"
            id="input_email"
            name="email"
            value="{{email}}"
        />
        </div>
        <div class="input-div">
        <label for="password" id="Password_label">Password</label>
        <input
            class="password-input"
            type="password"
            id="password"
            name="password"
            value="{{password}}"
        />
        </div>
        <div class="input-div">
             <label for="age" id="age_label">Age</label>
        <input
            class="age-input"
            type="number"
            id="age"
            name="age"
            value="{{age}}"
        />
        </div>
        <div class="input-div">
        <label for="city" id="city_label">City</label>
        <input
            class="city-input"
            type="text"
            id="city"
            name="city"
            value="{{city}}"
        />
        </div>
        <div class="input-div">
        <label for="homepage" id="homepage_label">Home Page</label>
        <input
            class="homepage-input"
            type="url"
            id="user-website-input"
            name="profilepage"
            value="{{profilepage}}"
        />
        </div>
        <button type="submit" class="update-button">Update</button>
    </form>
    {{/userResults}}
</section>